
@media (max-width: 980px)
  .container
    display flex
    margin-top 20px
    flex-direction column
    justify-content center
    .left
      width 100%
      .first-screen
        .first-screen__circle
          margin-left 33%







@media (max-width: 768px)
  .container
    font-size 14px
    .left
      .first-screen
        .first-screen__circle
          height 150px
          width 150px
          margin-left 0
        .first-screen__title
          margin-left 0
          justify-content left
          .title__first,.title__title
            font-size 30px
            text-align left
          .title__second
            text-align left
      .second__block
        .second__block_name
          .name__title
            font-size 30px
            width 100%
            display flex
            &:before
              display none
      .block__contact
        .block__contact_name
          .contact__title
            font-size 30px
            width 100%
            &:before
              display none
      .skills
        .skills__name
          .skill_title
            font-size 30px
            width 100%
            &:before
              display none
        .skills__content
          width 100%
          margin-left 0
          text-align left
          margin-bottom 20px
    .right
      .block
        .block__name
          .name__title
            font-size 30px
            &:before
              display none
        .block__content
          margin-left 0
          width 50%
          .contact__title,.content__title_two,.content__title_free
            font-size 20px
            align-content flex-start
            display flex
      .block__two
        width 100%
        .block__name_two
          .name__title
            font-size 30px
            &:before
              display none
        .block__content_two
          margin-left 0
          width 50%
      .software
        .software__name
          width 100%
          .name__title
            font-size 30px
            &:before
              display none
        .software__left
          width 50%
          flex-direction column
          margin-left 10%
        .software__right
          flex-direction column
          width 50%
          margin-left 10%












